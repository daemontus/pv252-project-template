{
  "name": "pv252",
  "version": "1.0.0",
  "main": "index.js",
  "private": true,
  "scripts": {
    "build-dev": "webpack --mode=development",
    "build-release": "webpack --mode=production",
    "start": "webpack serve --open --mode=development",
    "start-silent": "webpack serve --mode=development",
    "test-ui": "npx nyc playwright test && npx nyc report --reporter=html --reporter=json --report-dir ./coverage-ui && rm -r ./.nyc_output",
    "test-ui-interactive": "playwright test --ui",
    "test-ui-report": "playwright show-report",
    "test-unit": "jest",
    "coverage-merge": "mkdir -p coverage-total && cp ./coverage-ui/coverage-final.json ./coverage-total/ui.json && cp ./coverage-unit/coverage-final.json ./coverage-total/unit.json && npx nyc merge ./coverage-total/ ./coverage-total/coverage-final.json",
    "coverage-merge-report": "mkdir .nyc_output && cp ./coverage-total/coverage-final.json .nyc_output/out.json && nyc report --reporter=text --reporter=html --report-dir=./coverage-total/ && rm -r ./.nyc_output",
    "coverage": "npm run test-ui && npm run test-unit && npm run coverage-merge && npm run coverage-merge-report",
    "clean": "rm -r dist coverage-ui coverage-unit coverage-total .nyc_output playwright-report test-results",    
    "format": "prettier ./src --write",
    "check-lint": "eslint ./src",
    "check-format": "prettier ./src --check",
    "check-types": "tsc"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@babel/preset-env": "^7.25.4",
    "@babel/preset-typescript": "^7.24.7",
    "@eslint/js": "^9.11.0",
    "@istanbuljs/nyc-config-babel": "^3.0.0",
    "@playwright/test": "^1.47.2",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.5.5",
    "@types/uikit": "^3.14.5",
    "babel-loader": "^9.2.1",
    "babel-plugin-istanbul": "^7.0.0",
    "css-loader": "^7.1.2",
    "eslint": "^9.11.0",
    "globals": "^15.9.0",
    "html-loader": "^5.1.0",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "less": "^4.2.0",
    "less-loader": "^12.2.0",
    "local-web-server": "^5.4.0",
    "nyc": "^17.1.0",
    "prettier": "^3.3.3",
    "style-loader": "^4.0.0",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.6.0",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.1.0"
  },
  "dependencies": {
    "font-awesome": "^4.7.0",
    "uikit": "^3.21.12"
  }
}
